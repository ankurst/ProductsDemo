@{
    ViewBag.Title = "Create/Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript">
    var productId = '@ViewBag.pId';
</script>

@Scripts.Render("~/Scripts/app.js")

<h2>Create New / Edit Product</h2>

<div id="msg" style="white-space:pre-wrap;"></div>

<div class="form-horizontal">
    <h4>Product</h4>
    <hr />

    <div class="form-group">
        <label class="control-label col-md-2">Name</label>
        <div class="col-md-10">
            <input type="text" class="form-control" id="pName" name="pName" />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Description</label>
        <div class="col-md-10">
            <input type="text" class="form-control" id="pDesc" name="pDesc" />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Category</label>
        <div class="col-md-10">
            <select id="categorydd" name="categorydd" class="form-control" title="Select category to enter it's attribute values">
                <option value="0" selected>Select Category</option>
            </select>
        </div>
    </div>

    @*Placeholder template for attribute entry for dynamically generated categry selection*@
    <div id="catAttr"></div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button id="btnSubmit" name="btnSubmit" class="btn btn-default">Create</button>
            <button id="btnEdit" name="btnEdit" class="btn btn-default">Edit</button>
        </div>
    </div>
</div>

<div>
    @Html.ActionLink("Back to Product List", "Index")
</div>
